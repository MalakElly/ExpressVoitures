@model GestionVoituresExpress.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Détails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Détails de la voiture</h1>

<div class="row mt-4">
    <!-- Colonne de gauche : les infos -->
    <div class="col-md-7">
        <dl class="row">
            <dt class="col-sm-4">Code VIN</dt>
            <dd class="col-sm-8">@Model.Car.CodeVIN</dd>

            <dt class="col-sm-4">Année</dt>
            <dd class="col-sm-8">@Model.Car.Year</dd>

            <dt class="col-sm-4">Marque</dt>
            <dd class="col-sm-8">@Model.Car.Brand</dd>

            <dt class="col-sm-4">Modèle</dt>
            <dd class="col-sm-8">@Model.Car.Model</dd>

            <dt class="col-sm-4">Finition</dt>
            <dd class="col-sm-8">@Model.Car.Trim</dd>

            <dt class="col-sm-4">Kilométrage</dt>
            <dd class="col-sm-8">@Model.Car.Km km</dd>
            <dt class="col-sm-4">Prix</dt>
            <dd class="col-sm-8">@Model.Transaction.SellingPrice</dd>
        </dl>

        <div class="mt-3">
            <a class="btn btn-success" asp-action="BuythisCar" asp-route-id="@Model.Car.CarID">Acheter cette voiture</a>
            <a class="btn btn-secondary" asp-action="Index">Revenir à la liste</a>
        </div>
    </div>

    <!-- Colonne de droite : l'image -->
    <div class="col-md-5 text-center">
        @if (!string.IsNullOrEmpty(Model.Car.ImageURL))
        {
            <img src="@Url.Content("~/" + Model.Car.ImageURL)" alt="Image de la voiture" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
        }
        else
        {
            <p class="text-muted">Aucune image disponible</p>
        }
    </div>
</div>
