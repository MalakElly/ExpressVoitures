@page
@model LoginModel

@{
    ViewData["Title"] = "Express Voitures";
}

<style>
    body {
        font-family: 'Georgia', serif;
    }

    .login-container {
        max-width: 360px;
        margin: auto;
        padding: 40px 20px;
        text-align: center;
    }

        .login-container h1 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 30px;
            color: #3c2a1e;
        }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            font-weight: 500;
            display: block;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-custom {
        background-color: #c39254;
        color: white;
        border: none;
        padding: 10px 20px;
        width: 140px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
        font-size: 14px;
    }

    .btn-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        margin-top: 20px;
    }

    .separator {
        font-weight: bold;
    }
</style>

<div class="login-container">
    <h1>Express Voitures</h1>

    <form method="post" id="account">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.Email">Adresse email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password">Mot de passe</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="btn-container">
            <button type="submit" class="btn-custom">Se connecter</button>
            <span class="separator">ou</span>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-custom">S’inscrire</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
